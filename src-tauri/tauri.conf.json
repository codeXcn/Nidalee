{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nidalee",
  "version": "1.0.0",
  "identifier": "com.nidalee.lol-assistant",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Nidalee - 英雄联盟游戏助手",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "targets": ["deb", "dmg", "msi"],
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright © 2024 Nidalee Team. All rights reserved.",
    "category": "Game",
    "shortDescription": "英雄联盟游戏助手",
    "longDescription": "Nidalee 是一个功能强大的英雄联盟游戏助手，提供实时游戏数据分析、自动化功能和个性化设置。",
    "publisher": "Nidalee Team",
    "homepage": "https://github.com/codexlin/Nidalee",
    "licenseFile": "../LICENSE",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null,
      "tsp": false,
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}
